---
import TimeIcon from "@/icons/Time.astro";
import { type Playlist, type Song } from "@/lib/data";
import { SongCard } from "./SongCard";

interface Props {
  songs: Song[];
  playlist?: Playlist;
}

const { songs, playlist } = Astro.props;
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/50">
  <thead class="">
    <tr class="text-zinc-400 text-sm">
      <th class="px-4 py-2 font-light">#</th>
      <th class="px-4 py-2 font-light">Título</th>
      <th class="px-4 py-2 font-light">Álbum</th>
      <th class="px-4 py-2 font-light"><TimeIcon /></th>
    </tr>
  </thead>
  <tbody>
    <tr class="h-[16px]"></tr>
    {
      songs?.map((song, index) => (
        <tr class="border-spacing-0 text-gray-300 text-sm font-light hover:bg-white/10 overflow-hidden transition duration-300">
          <td class="px-4 py-2 rounded-tl-md rounded-bl-md w-5">{index + 1}</td>
          <td class="px-4 py-2">
            <SongCard song={song} songs={songs} playlist={playlist} client:visible/>
          </td>
          <td class="px-4 py-2">{song.album}</td>
          <td class="px-4 py-2 rounded-tr-md rounded-br-md">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
